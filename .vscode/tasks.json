{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "C:/MinGW/bin/gcc.exe", // Path to GCC
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/outDebug"
      ],
      "options": {
        "cwd": "${fileDirname}" // Working directory is set to the current file's directory
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Task generated by Debugger."
    }
  ]
}
